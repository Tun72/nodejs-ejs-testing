  <h2>Posts</h2>
  <% if(posts.length === 0) { %>
  <div class="create">
    <h4>Nothing to see ?</h4>
    <p>Create a new post now !!!</p>
    <a href="/admin/create-post" class="btn">Create a new post</a>
  </div>
  <% } else { %> <% for(let post of posts) { %>
  <div class="box">
    <p class="post-title"><%= post.title %></p>
    <a class="btn" href="/post/<%= post.id %>">See More...</a>
  </div>

  <% } %> <% } %>
